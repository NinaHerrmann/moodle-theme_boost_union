{{!
    @template theme_boost_union/settings-modicons-filelist

    Boost Union settingsfilelist layout template.

    Context variables required for this template:
    * files - Array of files

    Example context (json):
    {
        "files": [
            {
                "path": 'somenotexistingmod/monologo.png',
                "mod": 'Assignment',
                "moodle4": true,
            },
            {
                "path": 'somenotexistingmod/icon.png',
                "mod": 'Assignment',
                "moodle3": true,
            },
             {
                "path": 'somenotexistingmod/mono.png',
                "invalidname": 'true',
            }
        ]
    }
}}

<ul class="list-group my-3 settings-modicons-filelist">
    {{#files}}
        <li class="list-group-item d-flex justify-content-between">
            <div class="d-flex flex-row">
                {{#mod}}
                    {{^invalidname}}
                        <span class="text-success"><i class="fa fa-check-circle-o fa-3x fa-fw"></i></span>
                    {{/invalidname}}
                    {{#invalidname}}
                        <span class="text-danger"><i class="fa fa-times-circle-o fa-3x fa-fw"></i></span>
                    {{/invalidname}}
                {{/mod}}
                {{^mod}}
                    <span class="text-danger"><i class="fa fa-times-circle-o fa-3x fa-fw"></i></span>
                {{/mod}}
                <div class="ml-3">
                    <h6 class="mb-0"><code>{{path}}</code> {{mod}}
                        {{#moodle4}}
                            - ({{#str}}gtmoodle4, theme_boost_union{{/str}})
                        {{/moodle4}}
                        {{#moodle3}}
                            - ({{#str}}ltmoodle311, theme_boost_union{{/str}})
                        {{/moodle3}}
                    </h6>
                    {{#mod}}<small>
                        {{^invalidname}}
                        {{#moodle4}}
                            {{#str}}modiconsuccess40, theme_boost_union, {{mod}}{{/str}}
                        {{/moodle4}}
                        {{^moodle4}}
                            {{#str}}modiconsuccess3x, theme_boost_union, {{mod}}{{/str}}
                        {{/moodle4}}
                        {{/invalidname}}
                        {{#invalidname}}
                                {{#str}}modiconnamefail40, theme_boost_union, {{mod}}{{/str}}
                        {{/invalidname}}
                    </small>{{/mod}}
                    {{^mod}}
                        <small>
                            {{#str}}modiconnotexist, theme_boost_union, {{path}}{{/str}}
                        </small>
                    {{/mod}}
                </div>
            </div>
        </li>
    {{/files}}
</ul>
